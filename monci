#!/usr/bin/python3

import argparse
import logging
import sys
from moncic.cli import run
from moncic.ci import CI, Bootstrap, Shell, Update, Remove

VERSION = "0.1"

log = logging.getLogger(__name__)


def main():
    parser = argparse.ArgumentParser(description="CI tool")
    subparsers = parser.add_subparsers(help="sub-command help", dest="command", required=True)

    CI.make_subparser(subparsers)
    Bootstrap.make_subparser(subparsers)
    Update.make_subparser(subparsers)
    Remove.make_subparser(subparsers)
    Shell.make_subparser(subparsers)

    args = parser.parse_args()
    handler = args.handler(args)
    res = handler.run()
    if res is not None:
        sys.exit(res)


if __name__ == "__main__":
    run(main)
