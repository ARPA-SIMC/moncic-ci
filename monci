#!/usr/bin/python3

import argparse
import logging
import sys
import moncic
from moncic.cli import run
from moncic.ci import CI, Bootstrap, Shell, Update, Remove, Images, Distros, Run, Dedup


log = logging.getLogger(__name__)


def main():
    parser = argparse.ArgumentParser(description="CI tool")
    parser.add_argument("--version", action="version", version=moncic.__version__)
    subparsers = parser.add_subparsers(help="sub-command help", dest="command", required=True)

    CI.make_subparser(subparsers)
    Images.make_subparser(subparsers)
    Distros.make_subparser(subparsers)
    Bootstrap.make_subparser(subparsers)
    Update.make_subparser(subparsers)
    Remove.make_subparser(subparsers)
    Shell.make_subparser(subparsers)
    Run.make_subparser(subparsers)
    Dedup.make_subparser(subparsers)

    args = parser.parse_args()
    handler = args.handler(args)
    res = handler.run()
    if res is not None:
        sys.exit(res)


if __name__ == "__main__":
    run(main)
